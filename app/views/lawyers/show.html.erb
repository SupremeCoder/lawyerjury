<div class="row">
  <div class="col-md-4">
    <%= image_tag @lawyer.image_url %>

<h2>
  <%= @lawyer.name %>
</h2>

<div class="star-rating" data-score= <%= @avg_rating %>></div>
<p><%= "#{@reviews.length} reviews" %></p>

<p>
  <strong>Address:</strong>
  <%= @lawyer.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @lawyer.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @lawyer.state %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @lawyer.zip %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @lawyer.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to @lawyer.website, @lawyer.website %>
</p>

<p>
  <strong>Practice:</strong>
  <%= @lawyer.practice %>
</p>

<%= link_to "Write a Review", new_lawyer_review_path(@lawyer), class: "btn btn-primary" %>
  </div>

  <div class="col-md-8">
    <% if @reviews.blank? %>
      <h3>No reviews yet. Be the first to write one!</h3>
      <% else %>
      <h4>Recent Reviews</h4>
      <table class="table">
        <thead>
          <tr>
          <th class="col-md-3"></th>
          <th class="col-md-9"></th>
        </tr>
      </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <tr>
            <td>
              <h4>
              <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}." %>
              </h4>
            <p><%= review.created_at.strftime("%-m/%-d/%y") %></p>
          </td>

              <td>
                <div class="star-rating" data-score= <%= review.rating %>></div>
                <p><%= h(review.comment).gsub(/\n/, '</br>').html_safe %></p>

                <% if user_signed_in? %>
                  <% if (review.user == current_user) || (current_user.admin?) %>
                  <%= link_to "Edit", edit_lawyer_review_path(@lawyer, review) %>
                  <%= link_to "Delete", lawyer_review_path(@lawyer, review), method: :delete %>
                  <% end %>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_lawyer_path(@lawyer), class: "btn btn-link" %> |
<%= link_to 'Back', lawyers_path, class: "btn btn-link" %>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/ratejury/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
  }
  });
</script>
